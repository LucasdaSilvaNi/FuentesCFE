@model TiempoEnProcesoWeb.Models.BitacoraCobroFacturaModel

            @using (Html.BeginForm("Generate","BitacoraCobroFactura", FormMethod.Post, new {role="form", id="formData"}))
            {
                <div class="row">
                    <div class="col-lg-10 col-lg-offset-2">
                        <p class="form-control-static text-primary" style="text-align:right">@Session[TiempoEnProcesoHelper.Constantes.S_NOMBREEMP]</p> 
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <div class="row">
                    <div class="col-lg-10 col-lg-offset-1">
                        <h1 class="page-header" >Bitacora de Cobros por Factura</h1>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <div class="row">
                    <div class="col-lg-10 col-lg-offset-1">
                        <div class="panel panel-primary">
                            <div class="panel-heading" >
                                Parametros
                            </div>
                            <div class="panel-body">
                                <div class="row cnt_columns">
                                    <div class="col-md-6 ">                                    
                                            @Html.LabelFor(model => model.id_entidad)
                                            @Html.DropDownListFor(model => model.id_entidad, new SelectList((List<TiempoEnProcesoEN.EntidadLegalEN>)ViewData[TiempoEnProcesoHelper.Constantes.S_ENTIDAD_LEGAL], "id_entidad", "Razon_social"), new { @Class="form-control" })
                                    </div>
                                </div>
                                <br />
                                <div class="row cnt_columns">
                                    <div class="col-md-6 ">                                    
                                            @Html.LabelFor(model => model.NoFactura)
                                            @Html.TextBoxFor(model => model.NoFactura, new { @type = "number" })                                            
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div>
                    <div class="row">
                        <div class="col-lg-1 col-lg-offset-1">
                            <input type="submit" class="btn btn-success" value="Generar"/>
                        </div>
                    </div>
                </div>
            }

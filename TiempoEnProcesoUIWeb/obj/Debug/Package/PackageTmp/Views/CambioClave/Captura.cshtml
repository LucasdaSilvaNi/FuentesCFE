@model TiempoEnProcesoUIWeb.Models.CambioClaveModel

@{
    ViewBag.Title = "Captura Web";
}
            
            @using (Ajax.BeginForm("Cambiar", "CambioClave", new AjaxOptions { OnBegin = "OnBeginSave", OnFailure = "OnFailureSave", OnSuccess = "OnSuccessSave" }, new { role = "form", @class = "form-horizontal" }))
            {
                
                        
                <div class="row">
                    <div class="col-lg-12">
                        <h4 class="page-header"><strong>Cambio de Clave</strong></h4>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <div class="row">
                    <div class="col-md-8 col-sm-6">
                        
                        <div class="form-group" >
                            @Html.LabelFor(model=> model.PasswordActual, new {@Class="col-md-2 control-label"})
                            <div class="col-md-4">
                                @Html.PasswordFor(model=> model.PasswordActual,new { @Class="form-control" })
                                @Html.ValidationMessageFor(model => model.PasswordActual)
                            </div>
                        </div>
                
                        <div class="form-group" >
                            @Html.LabelFor(model=> model.Password, new {@Class="col-md-2 control-label"})
                            <div class="col-md-4">
                                @Html.PasswordFor(model=> model.Password,new { @Class="form-control" })
                                @Html.ValidationMessageFor(model=> model.Password)
                            </div>
                        </div>
                
                        
                        <div class="form-group" >
                            @Html.LabelFor(model => model.ConfPassword, new {@Class="col-md-2 control-label"})
                            <div class="col-md-4">
                                @Html.PasswordFor(model=> model.ConfPassword, new { @Class="form-control" })
                                @Html.ValidationMessageFor(model=> model.ConfPassword)
                            </div>                        
                        </div>
                        <div class="row">
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<button class="btn btn-success" type="submit" >Cambiar <i class="fa fa-save"></i></button>
                        </div>
                    </div>
                </div>
                
                @Html.HiddenFor(model=> model.id_empleado)
               
            }
           
            

           
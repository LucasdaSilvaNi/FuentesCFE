@using TiempoEnProcesoUIWeb.Models;

@model LoginModel

@{
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Ingreso al Sistema</title>
    <!-- Bootstrap Core CSS -->
    <link rel="stylesheet" href="~/Content/css/jquery-ui.css">

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="~/Content/css/metisMenu.min.css" rel="stylesheet">

    <!-- Timeline CSS -->
    <link href="~/Content/css/timeline.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Content/css/sb-admin-2.css" rel="stylesheet">

    <!-- Morris Charts CSS -->
    <link href="~/Content/css/morris.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title" style="text-align:center">Control de Tiempo en Linea</h3>
                    </div>
                    <div class="panel-body">
                    @{
                        using (Html.BeginForm())
                        {    
                                <div class="form-group">
                                    @Html.TextBoxFor(o=> o.Login, new { placeholder="Login", autofocus="autofocus", autocomplete="off", @Class="form-control"})
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(o=> o.Password, new { placeholder="Password", @Class="form-control"})
                                </div>
                                @Html.HiddenFor(o => o.ReturnUrl)
                                @Html.HiddenFor(o=> o.Error) 
                                <!-- Change this to a button or input when using this as a form -->
                                <input type="submit" class="btn btn-lg btn-success btn-block" value="Ingresar" />
                                <div class="alert alert-danger alert-dismissable @(!Model.Error ? "hide" : "")">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                    Usuario/Clave Invalida
                                </div>
                                
                        }
                    }
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- /container -->

    <!-- jQuery -->
    <script src="~/Scripts/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/Scripts/metisMenu.min.js"></script>

    <!-- Morris Charts JavaScript -->
    <script src="~/Scripts/raphael-min.js"></script>
    <script src="~/Scripts/morris.min.js"></script>

    <!-- Flot Charts JavaScript -->
    <script src="~/Scripts/excanvas.min.js"></script>
    <script src="~/Scripts/jquery.flot.js"></script>
    <script src="~/Scripts/jquery.flot.pie.js"></script>
    <script src="~/Scripts/jquery.flot.resize.js"></script>
    <script src="~/Scripts/jquery.flot.time.js"></script>
    <script src="~/Scripts/jquery.flot.tooltip.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="~/Scripts/sb-admin-2.js"></script>    
    


</body>
</html>